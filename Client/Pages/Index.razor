@page "/"
@using Radzen.Blazor;
@inject Microsoft.Extensions.Localization.IStringLocalizer<Index> L

<PageTitle>Poly</PageTitle>
<RadzenRow Gap="5" RowGap="5">
    <RadzenColumn Size="12">
        <RadzenText Text="@L["Title"]" TextStyle="TextStyle.DisplayH2" TagName="TagName.Auto"></RadzenText>
        <RadzenText Text="@L["SubTitle"]" TextStyle="TextStyle.Body1" TagName="TagName.Auto" class="mt-4" Style="font-size: 20px; line-height: 24px"></RadzenText>
        <RadzenText Text="Poly" TextStyle="TextStyle.H4" TagName="TagName.H2" class="mt-4" TextAlign="Radzen.TextAlign.Center"></RadzenText>
        <RadzenImage Path="images\poly.png" Style="width: 256px; display: flex; vertical-align: baseline; margin: 0 auto"></RadzenImage>
        <RadzenTimeline Orientation="Orientation.Vertical" LinePosition="Radzen.LinePosition.Alternate"
            style="--rz-timeline-line-width: 3px;
                   --rz-timeline-line-color: var(--rz-info);
                   --rz-timeline-axis-size: 72px;
                   max-width: 600px;
                   margin: 0 auto;">
            <Items>
                <RadzenTimelineItem PointVariant="Variant.Outlined" PointSize="PointSize.Large" PointStyle="PointStyle.Info" PointShadow="0">
                    <PointContent><RadzenIcon Icon="translate" /></PointContent>
                    <ChildContent>
                        <RadzenText TextStyle="TextStyle.Subtitle1" Class="rz-m-0 rz-color-info" Text="@L["Multilanguage"]"></RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1" Class="rz-m-0" Text="@L["MultilanguagDescription"]" />
                    </ChildContent>
                </RadzenTimelineItem>
                <RadzenTimelineItem PointVariant="Variant.Outlined" PointSize="PointSize.Large" PointStyle="PointStyle.Info" PointShadow="0">
                    <PointContent><RadzenIcon Icon="push_pin" /></PointContent>
                    <ChildContent>
                        <RadzenText TextStyle="TextStyle.Subtitle1" Class="rz-m-0 rz-color-info" Text="@L["AlwaysOnTop"]">Poly is always there for you!</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1" Class="rz-m-0">
                            @L["AlwaysOnTopDescription1"]
                            <br />
                            @L["AlwaysOnTopDescription2"]
                        </RadzenText>
                    </ChildContent>
                </RadzenTimelineItem>
                <RadzenTimelineItem PointVariant="Variant.Outlined" PointSize="PointSize.Large" PointStyle="PointStyle.Info" PointShadow="0">
                    <PointContent><RadzenIcon Icon="visibility" /></PointContent>
                    <ChildContent>
                        <RadzenText TextStyle="TextStyle.Subtitle1" Class="rz-m-0 rz-color-info" Text="@L["AlwaysViewing"]">Poly is always viewing</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1" Class="rz-m-0" >
                            @((MarkupString)L["AlwaysViewingDescription"].ToString())
                        </RadzenText>
                    </ChildContent>
                </RadzenTimelineItem>
                <RadzenTimelineItem PointVariant="Variant.Outlined" PointSize="PointSize.Large" PointStyle="PointStyle.Info" PointShadow="0">
                    <PointContent><RadzenIcon Icon="image_search" /></PointContent>
                    <ChildContent>
                        <RadzenText TextStyle="TextStyle.Subtitle1" Class="rz-m-0 rz-color-info" Text="@L["Learn"]">Learn by association</RadzenText>
                        <RadzenText TextStyle="TextStyle.Body1" Class="rz-m-0">
                            @((MarkupString)L["LearnDescription"].ToString())
                        </RadzenText>
                    </ChildContent>
                </RadzenTimelineItem>
            </Items>
        </RadzenTimeline>
        <RadzenCard  Class="rz-my-12 rz-mx-auto" Style="max-width: 420px">
        <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
           
                <RadzenText TextStyle="TextStyle.DisplayH6" TagName="TagName.H3" Style="text-align: center" Text="@L["DownloadTitle"]">
                    What are you waiting for?
                </RadzenText>
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="Radzen.JustifyContent.Center">
                    <RadzenButton Click="DownloadWindowsx86" Icon="get_app" Text="x86" Size="Radzen.ButtonSize.Large" />
                    <RadzenButton Click="DownloadWindowsx64" Icon="get_app" Text="x64" Size="Radzen.ButtonSize.Large" />
                </RadzenStack>
                <RadzenText TextStyle="Radzen.Blazor.TextStyle.Caption" Style="font-style: italic; text-align: center" Text="@L["OnlyForWindows"]">
                    At this time only available for windows.
                </RadzenText>
        </RadzenStack>
    </RadzenCard>
    </RadzenColumn>
</RadzenRow>

